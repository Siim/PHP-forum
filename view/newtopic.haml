.content{ :align => 'center' }
  - if($error):
    .message.errors
      %ul
        - foreach($error as $e):
          %li= $e
        - endforeach
  - endif
  %table{ :cellspacing => '0.0', :cellpadding => '0.0', :width =>'500' }
    %thead.forumbg.forumhead
      %th.top-left{ :colspan => '2' }= $title
      %th.top-right{ :width => 20 } 
      
    %tr.row-0
      %td{ :colspan => '3', :align => 'left' }
        .formwrap.postform
          %form{ :method => 'post', :action => url('topic/savetopic') }
            %input{ :type => 'hidden', :name => 'f', :value =>$_GET[3]}
            %div
              %label{ :for => 'title'} Title
              %input{ :type => 'text', :name => 'title', :value=>utf8_decode($post['title']) }
            %div
              %label{ :for => 'content' } Message
              %textarea{ :name => 'content' }= $post['content']
            .clear
            
            %input.sbutton{ :type => 'submit', :name => 'Save', :value => 'Save' }
    %tr.forumbg.forumfoot
      %td.bottom-left
      %td
      %td.bottom-right 
