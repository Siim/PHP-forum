.content{ :align => 'center' }
  - if($error):
    .message.errors
      %ul
        - foreach($error as $e):
          %li= $e
        - endforeach
  - endif
  %table{ :cellspacing => '0.0', :cellpadding => '0.0', :width =>'500' }
    %thead.forumbg.forumhead
      %th.top-left{ :colspan => '2' }= $title
      %th.top-right{ :width => 20 } 
      
    %tr.row-0
      %td{ :colspan => '3', :align => 'left' }
        .formwrap.postform
          %form{ :method => 'post', :action => url('?c=user&a=saveprofile') }
            %div
              %label{ :for => 'username'} Username 
              %input{ :type => 'text', :name => '', :disabled=>'disabled', :value=>$user['username'] }
            %div
              %label{ :for => 'password'} Old password
              %input{ :type => 'password', :name => 'oldpassword', :value=>'' }
            %div
              %label{ :for => 'password'} New Password
              %input{ :type => 'password', :name => 'password', :value=>'' }
            %div  
              %label{ :for => 'email'} E-mail
              %input{ :type => 'text', :name => '', :disabled=>'disabled', :value=>$user['email'] }
            .clear
            
            %input.sbutton{ :type => 'submit', :name => 'Save', :value => 'Save' }
    %tr.forumbg.forumfoot
      %td.bottom-left
      %td
      %td.bottom-right 
